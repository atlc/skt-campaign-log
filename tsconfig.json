{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2022",
        "module": "ES2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "./src",
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "exclude": ["node_modules"]
}
